<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="bottom"
    android:background="#99000000"
    android:clickable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0sp"
    android:id="@+id/searchQRBottomSheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:focusable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBG">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/searchQRBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:background="@drawable/ic_arrow_back_blue"></ImageView>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_bold"
                android:textColor="@color/black"
                android:text="QR-Code Information"
                android:gravity="center"
                android:textSize="16dp"></androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:id="@+id/TextsearchQRInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:inputType="textPostalAddress"
            android:textSize="14sp"></androidx.appcompat.widget.AppCompatTextView>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"
           android:weightSum="3">
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="0dp"
               android:layout_weight="1"
               android:drawableTop="@drawable/ic_search"
               android:id="@+id/BtnSearchQRInfo"
               android:layout_margin="2dp"
               android:layout_height="70dp"
               android:textColor="@color/white"
               android:backgroundTint="@color/black"
               android:text="Search"></androidx.appcompat.widget.AppCompatButton>

           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/BtnCopyQRInfo"
               android:layout_margin="2dp"
               android:layout_height="70dp"
               android:textColor="@color/white"
               android:drawableTop="@drawable/ic_copy"
               android:backgroundTint="@color/black"
               android:text="Copy"></androidx.appcompat.widget.AppCompatButton>
           <androidx.appcompat.widget.AppCompatButton
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/BtnShareQRInfo"
               android:layout_margin="2dp"
               android:layout_height="70dp"
               android:drawableTop="@drawable/ic_share"
               android:textColor="@color/white"
               android:backgroundTint="@color/black"
               android:text="Share"></androidx.appcompat.widget.AppCompatButton>
       </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>